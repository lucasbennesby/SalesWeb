@using SalesWeb.Models.Enums
@model SalesWeb.Models.SalesRecord

@{
    ViewData["Title"] = "Sales Record Create";
}

@{
<h4>Sales Record @ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-floating mb-3">
                <input asp-for="Date" class="form-control" id="floatingName" placeholder="" autocomplete="off">
                <label asp-for="Seller.Name" for="floatingName">Date</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Amount" class="form-control" id="floatingBirthDate" placeholder="" autocomplete="off">
                <label asp-for="Amount" for="floatingBirthDate">Amount</label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Status" class="form-control" id="floatingBaseSalary" asp-items="@Html.GetEnumSelectList<SaleStatus>()" placeholder=" " autocomplete="off"></select>
                <label asp-for="Status" for="floatingBaseSalary">Status</label>
            </div>
            <div class="form-group">
                <label asp-for="Seller" class="control-label">Seller</label>
                <select asp-for="Seller.Id" asp-items="ViewBag.Sellers" class="form-control " autocomplete="off"></select>               
            </div>
            <div class="form-group mt-2">
                <input value="Save" type="submit" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Back to list</a>
            </div>
        </form>
    </div>
</div>
}



