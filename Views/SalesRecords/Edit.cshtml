@using SalesWeb.Models.Enums
@model SalesWeb.Models.ViewModels.SalesRecordFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h4>Sales Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="SalesRecord.Id" />
            <div class="form-floating mb-3">
                <input asp-for="SalesRecord.Date" class="form-control" id="floatingName" placeholder="" autocomplete="off">
                <label asp-for="SalesRecord.Seller.Name" for="floatingName">Date</label>
            </div>         
            <div class="form-floating mb-3">
                <input asp-for="SalesRecord.Amount" class="form-control" id="floatingBirthDate" placeholder="" autocomplete="off">
                <label asp-for="SalesRecord.Amount" for="floatingBirthDate">Amount</label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="SalesRecord.Status" class="form-control" id="floatingBaseSalary" asp-items="@Html.GetEnumSelectList<SaleStatus>()"  placeholder=" " autocomplete="off"></select>
                <label asp-for="SalesRecord.Status" for="floatingBaseSalary">Status</label>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Seller" class="control-label">Seller</label>
                <select asp-for="SalesRecord.SellerId" asp-items="@(new SelectList (Model.Sellers,"Id","Name"))" class="form-control " autocomplete="off"></select>
            </div>
            <div class="form-group mt-2">
                <input value="Save" type="submit" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Back to list</a>
            </div>

        </form>
    </div>
</div>






