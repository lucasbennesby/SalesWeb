@model SalesWeb.Models.Seller


@{
    ViewData["Title"] = "Detail";
}

<h1>Seller @ViewData["Title"]</h1>


@{

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.Name)</th>
                <th>@Html.DisplayNameFor(Model => Model.Email)</th>
                <th>@Html.DisplayNameFor(Model => Model.BirthDate)</th>
                <th>@Html.DisplayNameFor(Model => Model.BaseSalary)</th>
                <th>@Html.DisplayNameFor(Model => Model.Department)</th>
                <th class="text-center">Actions</th>
           </tr>
        </thead>
        <tbody>           
                <tr>
                    <td>
                    @Html.DisplayFor(model => model.Name)
                    </td>


                    <td>
                    @Html.DisplayFor(model => model.Email)
                    </td>


                    <td>
                    @Html.DisplayFor(model => model.BirthDate)
                    </td>


                    <td>R$
                    @Html.DisplayFor(model => model.BaseSalary)
                    </td>


                    <td>
                    @Html.DisplayFor(model => model.Department.Name)
                    </td>

                <td class="text-center">
                    <a type="button" class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>                  

                </td>
                   
                </tr>
            
        </tbody>
    </table>
    <a class="btn btn-warning" asp-action="Index">Back to list</a>

}