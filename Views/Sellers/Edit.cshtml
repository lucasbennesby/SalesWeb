@model SalesWeb.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-floating mb-3">
                <input asp-for="Seller.Name" class="form-control" id="floatingName" placeholder="" autocomplete="off">
                <label asp-for="Seller.Name" for="floatingName">Name</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Seller.Email" class="form-control" id="floatingEmail" placeholder="" autocomplete="off">
                <label asp-for="Seller.Email" for="floatingEmail">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Seller.BirthDate" class="form-control" id="floatingBirthDate" placeholder="" autocomplete="off">
                <label asp-for="Seller.BirthDate" for="floatingBirthDate">BirthDate</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Seller.BaseSalary" class="form-control" id="floatingBaseSalary" placeholder="" autocomplete="off">
                <label asp-for="Seller.BaseSalary" for="floatingBaseSalary">BaseSalary</label>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Department</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList (Model.Departments,"Id","Name"))" class="form-control " autocomplete="off"></select>
            </div>
            <div class="form-group mt-2">
                <input value="Save" type="submit" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Back to list</a>
            </div>

        </form>
    </div>
</div>






